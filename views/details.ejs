<% include search %>
<div class="jumbotron-fluid bg-dark text-light">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-12 col-sm-12 col-md-6 col-lg-4">
                <img class="rounded mainPoster mx-auto d-block" src=<%=data.Poster %>>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-8 px-3">
                <div class="row flex-column">
                <h2 class=><%= data.Title %> (<%= data.Year %>)</h2>
                <p class="">Released:<%= data.Released %> Runtime:<%= data.Runtime %>
                </p>
                </div>
                <div class="row">
                    Imdb:<%= data.imdbRating %>
                    MetaScore:<%= data.Metascore %> 
                    Rotten Tomatoes:<%= data.Ratings[1].Value %>  
                </div>
                <div class="row flex-column">
                    <h3>Story</h3>
                    <p><%= data.Plot %> </p>
                </div>
                <div class="row flex-column">
                    <h3>Main Actors</h3>
                    <p><%= data.Actors%></p>
                </div>
            </div>
        </div>

    </div>
</div>


<% include partials/footer %>